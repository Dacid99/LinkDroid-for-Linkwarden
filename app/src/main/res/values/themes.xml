<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="Base.Theme.LinkDroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- System bars and app bar -->
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
        
        <!-- Theme attributes -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Custom</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.LinkDroid" parent="Base.Theme.LinkDroid" />

    <!-- Preference theme overlay -->
    <style name="PreferenceThemeOverlay.Custom" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/Preference.Material.Custom</item>
        <item name="android:switchStyle">@style/Widget.App.Switch</item>
    </style>
</resources>