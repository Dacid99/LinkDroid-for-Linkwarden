<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LinkDroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Custom</item>
    </style>

    <style name="AlertDialog.Theme.LinkDroid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Custom preference theme -->
    <style name="PreferenceThemeOverlay.Custom" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceFragmentListStyle">@style/PreferenceFragment.Custom</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="PreferenceFragment.Custom" parent="PreferenceFragment">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>
</resources>