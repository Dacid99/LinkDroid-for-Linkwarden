<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow layer -->
    <item>
        <shape>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" />
            <solid android:color="#30000000" />
            <corners 
                android:topLeftRadius="30dp"
                android:bottomLeftRadius="30dp" />
        </shape>
    </item>
    
    <!-- Frame layer - creates the main border -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/colorSurface"
                android:endColor="@color/backgroundColor"
                />
            <corners 
                android:topLeftRadius="28dp"
                android:bottomLeftRadius="28dp" />
        </shape>
    </item>
    
    <!-- Inner content layer -->
    <item
        android:left="4dp"  
        android:right="0dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape>
            <solid android:color="@color/backgroundColor" />
            <corners 
                android:topLeftRadius="24dp"
                android:bottomLeftRadius="24dp" />
        </shape>
    </item>
</layer-list>