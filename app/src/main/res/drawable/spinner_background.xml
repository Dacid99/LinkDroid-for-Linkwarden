<?xml version="1.0" encoding="utf-8"?>
<!-- Custom background for the collections dropdown spinner -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background color matching the dialog theme -->
            <solid android:color="@color/colorSurface"/>
            
            <!-- Rounded corners for better visual appearance -->
            <corners android:radius="4dp"/>
            
            <!-- Border to make the spinner more visible -->
            <stroke
                android:width="1dp"
                android:color="@color/textColorPrimary"/>
            
            <!-- Internal padding for better touch target and text visibility -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</layer-list>